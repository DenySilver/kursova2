<%- include('../partials/achievement') %>

<script>
    const userId = "<%= userId %>";
    const langId = "<%= typeof langId != 'undefined' ? langId : 1 %>";

    function checkTest() {
        let score = 0;
        const answers = document.querySelectorAll('.correct-answer');
        let allAnswered = true;
        
        answers.forEach(ans => {
            const correct = ans.value;
            const name = ans.dataset.q;
            const selected = document.querySelector(`input[name="${name}"]:checked`);
            
            const allLabels = document.querySelectorAll(`input[name="${name}"] + label`);
            
            allLabels.forEach(l => {
                l.classList.remove('btn-success', 'btn-outline-danger', 'btn-outline-secondary', 'text-white', 'border-danger');
                l.classList.add('btn-outline-secondary');
                l.querySelector('.check-icon').classList.add('opacity-0');
            });

            if (selected) {
                const selectedLabel = document.querySelector(`label[for="${selected.id}"]`);
                
                if (selected.value === correct) {
                    score++;
                    selectedLabel.classList.remove('btn-outline-secondary');
                    selectedLabel.classList.add('btn-success', 'text-white');
                    selectedLabel.querySelector('.check-icon').classList.remove('opacity-0');
                } else {
                    selectedLabel.classList.remove('btn-outline-secondary');
                    selectedLabel.classList.add('btn-outline-danger', 'text-danger', 'border-danger', 'fw-bold');
                    
                    const correctInput = document.querySelector(`input[name="${name}"][value="${correct}"]`);
                    if (correctInput) {
                        const correctLabel = document.querySelector(`label[for="${correctInput.id}"]`);
                        correctLabel.classList.remove('btn-outline-secondary');
                        correctLabel.classList.add('btn-outline-success', 'text-success', 'fw-bold');
                    }
                }
            } else {
                allAnswered = false;
                ans.parentElement.parentElement.classList.add('border-danger', 'bg-light');
            }
        });

        if (!allAnswered) {
            const firstMissed = document.querySelector('.border-danger');
            if(firstMissed) firstMissed.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            alert("–ë—É–¥—å –ª–∞—Å–∫–∞, –¥–∞–π—Ç–µ –≤—ñ–¥–ø–æ–≤—ñ–¥—å –Ω–∞ –≤—Å—ñ –∑–∞–ø–∏—Ç–∞–Ω–Ω—è! –ü—Ä–æ–ø—É—â–µ–Ω—ñ –ø–∏—Ç–∞–Ω–Ω—è –ø—ñ–¥—Å–≤—ñ—á–µ–Ω—ñ —á–µ—Ä–≤–æ–Ω–∏–º.");
            return;
        }
        const submitBtn = document.querySelector('button[onclick="checkTest()"]');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞...';

        fetch(`/study/user/${userId}/test/submit`, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ 
                score: score, 
                total: answers.length,
                langId: langId
            })
        })
        .then(res => res.json())
        .then(data => {
            if (data.newAchievements && data.newAchievements.length > 0) {
                if (typeof showAchievement === "function") {
                    showAchievement(data.newAchievements);
                }
            } 
            
            setTimeout(() => {
                showResultsModal(score, answers.length, data.points);
            }, 1500);
        })
        .catch(err => {
            console.error("Error:", err);
            submitBtn.disabled = false;
            submitBtn.innerHTML = '‚ùå –ü–æ–º–∏–ª–∫–∞. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑';
        });
    }

    function showResultsModal(score, total, xp) {
        document.getElementById('result-score').innerText = score;
        document.getElementById('result-total').innerText = total;
        document.getElementById('result-xp').innerText = xp;
        const percentage = Math.round((score / total) * 100);
        const badge = document.getElementById('modal-score-badge');
        const message = document.getElementById('modal-message');

        badge.innerText = percentage + '%';
        
        if (percentage === 100) {
            badge.className = 'position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success border border-light';
            message.innerText = "–Ü–¥–µ–∞–ª—å–Ω–æ!";
        } else if (percentage >= 70) {
            badge.className = 'position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary border border-light';
            message.innerText = "–ß—É–¥–æ–≤–∞ —Ä–æ–±–æ—Ç–∞!";
        } else {
            badge.className = 'position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark border border-light';
            message.innerText = "–ù–µ–ø–æ–≥–∞–Ω–æ, –∞–ª–µ –º–æ–∂–Ω–∞ –∫—Ä–∞—â–µ!";
        }

        document.getElementById('results-modal').classList.remove('d-none');
    }
</script>

