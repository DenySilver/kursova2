<script>
    const wordsPool = <%- JSON.stringify(words) %>;
    const userId = "<%= userId %>";
    const langId = "<%= langId %>";
    
    let score = 0;
    let timeLeft = 60;
    let timerInterval;
    let currentPair = {}; 

    function startGame() {
        if (wordsPool.length < 2) {
            alert("–ó–∞–º–∞–ª–æ —Å–ª—ñ–≤ –¥–ª—è –≥—Ä–∏! –°–ø–æ—á–∞—Ç–∫—É –¥–æ–¥–∞–π—Ç–µ —Å–ª–æ–≤–∞ –≤ –±–∞–∑—É.");
            return;
        }
        document.getElementById('start-overlay').classList.add('d-none');
        score = 0;
        timeLeft = 60;
        updateUI();
        nextCard();
        
        timerInterval = setInterval(() => {
            timeLeft--;
            document.getElementById('timer').innerText = timeLeft;
            document.getElementById('time-bar').style.width = (timeLeft / 60 * 100) + '%';
            
            if (timeLeft <= 0) {
                endGame();
            }
        }, 1000);
    }

    function nextCard() {
        const correctWord = wordsPool[Math.floor(Math.random() * wordsPool.length)];
        const isCorrect = Math.random() < 0.5;
        let displayTranslation = correctWord.translation;

        if (!isCorrect) {
            let wrongWord;
            do {
                wrongWord = wordsPool[Math.floor(Math.random() * wordsPool.length)];
            } while (wrongWord.word_id === correctWord.word_id);
            displayTranslation = wrongWord.translation;
        }

        currentPair = { isMatch: isCorrect };

        document.getElementById('word-original').innerText = correctWord.original;
        document.getElementById('word-translation').innerText = displayTranslation;
    }

    function checkAnswer(userAnswer) {
        if (userAnswer === currentPair.isMatch) {
            score += 10; 
            pulseAnimation('success');
        } else {
            pulseAnimation('danger');
        }
        updateUI();
        nextCard();
    }

    function updateUI() {
        document.getElementById('current-score').innerText = score;
    }

    function pulseAnimation(color) {
        const card = document.querySelector('.card');
        card.classList.add(`border-${color}`, 'border-3');
        setTimeout(() => card.classList.remove(`border-${color}`, 'border-3'), 200);
    }

    function endGame() {
        clearInterval(timerInterval);
        
        document.getElementById('final-score').innerText = score;
        document.getElementById('results-modal').classList.remove('d-none');

        fetch(`/study/user/${userId}/sprint/submit`, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ userId, score, langId })
        })
        .then(res => res.json())
        .then(data => {
            if (data.newAchievements && data.newAchievements.length > 0) {
                if (typeof showAchievement === "function") {
                    showAchievement(data.newAchievements);
                }
            }
        })
        .catch(err => console.error(err));
    }
</script>

